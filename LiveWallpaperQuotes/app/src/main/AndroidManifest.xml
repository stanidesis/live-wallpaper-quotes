<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stanleyidesis.livewallpaperquotes">

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/AppTheme"
        android:name="com.orm.SugarApp">

        <!-- Sugar ORM Meta Data -->

        <meta-data android:name="DATABASE" android:value="live_wallpaper_quote.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.stanleyidesis.livewallpaperquotes.api.db"/>

        <!-- Activities -->

        <activity android:name=".ui.activity.LWQSettingsActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Services -->

        <service android:name=".api.service.LWQWallpaperService"
            android:permission="android.permission.BIND_WALLPAPER">

            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService"/>
            </intent-filter>

            <meta-data android:name="android.service.wallpaper"
                android:resource="@xml/meta"/>
        </service>

    </application>

</manifest>
