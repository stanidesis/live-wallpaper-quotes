<resources>

    <!-- Base application theme. -->
    <style name="Theme.LWQ" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#00FFFFFF</item>
        <item name="colorAccent">#AAAAAA</item>
        <item name="android:spinnerItemStyle">@style/Theme.LWQ.TextAppearance.Settings.Category.SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/Theme.LWQ.TextAppearance.Settings.Category.SpinnerDropDownItem</item>
    </style>


    <style name="Theme.LWQ.Wallpaper.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="colorAccent">@color/palette_500</item>
    </style>

    <style name="Theme.LWQ.Wallpaper" parent="Theme.LWQ.Wallpaper.Base">
        <item name="colorAccent">@color/palette_500</item>
    </style>

    <style name="Theme.LWQ.TextAppearance.Settings.Category" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/palette_50</item>
    </style>

    <style name="Theme.LWQ.TextAppearance.Settings.Category.SpinnerItem" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/palette_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.LWQ.TextAppearance.Settings.Category.SpinnerDropDownItem" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:textColor">@color/palette_500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.LWQ.SeekBar">
        <item name="android:progressTint">@color/palette_500</item>
        <item name="android:thumbTint">@color/palette_400</item>
    </style>

    <style name="Theme.LWQ.TextAppearance.Settings.EditQuote.Quote" parent="@style/Theme.LWQ.TextAppearance.Settings.Category">
        <item name="android:gravity">start|left|top</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.LWQ.TextAppearance.Settings.EditQuote.Author" parent="@style/Theme.LWQ.TextAppearance.Settings.EditQuote.Quote">
        <item name="android:textAllCaps">false</item>
        <item name="android:capitalize">words</item>
        <item name="android:textColor">@color/palette_100</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="Theme.LWQ.AppCompatAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#5fa3d0</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="Theme.LWQ.NoShow" parent="Theme.LWQ.Wallpaper.Base">
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>