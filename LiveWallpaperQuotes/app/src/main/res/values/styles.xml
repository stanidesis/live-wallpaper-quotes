<resources>

    <!-- Base application theme. -->
    <style name="Theme.LWQ" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#00FFFFFF</item>
        <item name="colorAccent">#AAAAAA</item>
        <item name="android:spinnerItemStyle">@style/Theme.LWQ.TextAppearance.Settings.Category.SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/Theme.LWQ.TextAppearance.Settings.Category.SpinnerDropDownItem</item>
    </style>


    <style name="Theme.LWQ.Wallpaper.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="Theme.LWQ.Wallpaper" parent="Theme.LWQ.Wallpaper.Base"></style>

    <style name="Theme.LWQ.TextAppearance.Settings.Category" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/palette_50</item>
    </style>

    <style name="Theme.LWQ.TextAppearance.Settings.Category.SpinnerItem" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/palette_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.LWQ.TextAppearance.Settings.Category.SpinnerDropDownItem" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:textColor">@color/palette_500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.LWQ.SeekBar">
        <item name="android:progressTint">@color/palette_500</item>
        <item name="android:thumbTint">@color/palette_400</item>
    </style>

</resources>