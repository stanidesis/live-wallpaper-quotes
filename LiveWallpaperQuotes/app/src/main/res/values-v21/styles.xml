<resources>
      <style name="Theme.LWQ.Wallpaper" parent="Theme.LWQ.Wallpaper.Base">
        <item name="colorAccent">@color/palette_500</item>
        <!-- Works on v21+ -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.LWQ.SeekBar">
        <!-- Works on v21+ -->
        <item name="android:progressTint">@color/palette_500</item>
        <item name="android:thumbTint">@color/palette_400</item>
    </style>

</resources>