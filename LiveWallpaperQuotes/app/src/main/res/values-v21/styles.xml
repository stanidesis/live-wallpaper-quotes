<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.LWQ.Wallpaper" parent="Theme.LWQ.Wallpaper.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="colorAccent">@color/palette_500</item>
    </style>

    <style name="Theme.LWQ.TextAppearance.Settings.Category" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/palette_50</item>
    </style>

    <style name="Theme.LWQ.TextAppearance.Settings.EditQuote.Quote" parent="@style/Theme.LWQ.TextAppearance.Settings.Category">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|left|top</item>
        <item name="android:capitalize">characters</item>
    </style>

    <style name="Theme.LWQ.TextAppearance.Settings.EditQuote.Author" parent="@style/Theme.LWQ.TextAppearance.Settings.EditQuote.Quote">
        <item name="android:textAllCaps">false</item>
        <item name="android:capitalize">words</item>
        <item name="android:textColor">@color/palette_100</item>
    </style>

</resources>