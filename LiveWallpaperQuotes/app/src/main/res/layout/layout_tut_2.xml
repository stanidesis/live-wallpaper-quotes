<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        style="@style/Theme.LWQ.TextAppearance.Settings.EditQuote.Quote"
        android:id="@+id/tv_tut_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_headline_2"
        android:textSize="44sp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        app:layout_widthPercent="80%"
        app:layout_marginTopPercent="5%"/>

    <TextView
        style="@style/Theme.LWQ.TextAppearance.Settings.EditQuote.Author"
        android:id="@+id/tv_tut_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tut_headline"
        android:layout_alignLeft="@+id/tv_tut_headline"
        android:layout_alignStart="@id/tv_tut_headline"
        android:text="@string/tutorial_detail_2"
        android:textSize="30sp"
        app:layout_widthPercent="80%"/>

    <TextView
        style="@style/Theme.LWQ.TextAppearance.Settings.EditQuote.Author"
        android:id="@+id/tv_tut_category"
        android:layout_below="@+id/tv_tut_details"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:text="Motivational Quotes"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/palette_600"
        android:textAllCaps="true"
        android:background="@drawable/circle_button"
        android:elevation="3dp"
        android:padding="5dp"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="23%"/>

    <TextView
        style="@style/Theme.LWQ.TextAppearance.Settings.EditQuote.Author"
        android:id="@+id/tv_tut_author"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_tut_details"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:gravity="center"
        android:text="Quotes by William Shakespeare"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/palette_600"
        android:textAllCaps="true"
        android:background="@drawable/circle_button"
        android:elevation="5dp"
        android:padding="5dp"
        app:layout_marginTopPercent="15%"
        app:layout_marginRightPercent="20%"/>

    <TextView
        style="@style/Theme.LWQ.TextAppearance.Settings.EditQuote.Author"
        android:id="@+id/tv_tut_own_quote"
        android:layout_below="@+id/tv_tut_details"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:gravity="center"
        android:text="“Follow your own advice!”\n- Me"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/palette_600"
        android:textAllCaps="true"
        android:background="@drawable/circle_button"
        android:elevation="6dp"
        android:padding="5dp"
        app:layout_marginTopPercent="32%"
        app:layout_marginLeftPercent="28%"/>

</android.support.percent.PercentRelativeLayout>