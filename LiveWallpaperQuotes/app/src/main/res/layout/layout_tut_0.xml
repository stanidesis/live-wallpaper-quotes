<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        style="@style/Theme.LWQ.TextAppearance.Settings.EditQuote.Quote"
        android:id="@+id/tv_tut_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_headline_0"
        android:textSize="44sp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        app:layout_widthPercent="80%"
        app:layout_marginTopPercent="5%"/>

    <TextView
        style="@style/Theme.LWQ.TextAppearance.Settings.EditQuote.Author"
        android:id="@+id/tv_tut_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tut_headline"
        android:layout_alignLeft="@+id/tv_tut_headline"
        android:layout_alignStart="@id/tv_tut_headline"
        android:text="@string/tutorial_detail_0"
        android:textSize="30sp"
        android:lines="2"
        app:layout_widthPercent="80%"/>

    <ImageView
        android:id="@+id/iv_lwq_activate_tutorial_image_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/tutorial_bg"
        android:layout_below="@id/tv_tut_details"
        android:layout_centerHorizontal="true"
        app:layout_widthPercent="80%"
        app:layout_marginTopPercent="3%"/>

</android.support.percent.PercentRelativeLayout>