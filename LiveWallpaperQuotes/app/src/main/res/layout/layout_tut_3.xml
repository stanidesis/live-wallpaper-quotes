<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        style="@style/Theme.LWQ.TextAppearance.Settings.EditQuote.Quote"
        android:id="@+id/tv_tut_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_headline_3"
        android:textSize="44sp"
        android:layout_centerHorizontal="true"
        android:gravity="end"
        android:textAllCaps="true"
        app:layout_widthPercent="80%"
        app:layout_marginTopPercent="5%"/>

    <TextView
        style="@style/Theme.LWQ.TextAppearance.Settings.EditQuote.Author"
        android:id="@+id/tv_tut_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tut_headline"
        android:layout_alignLeft="@+id/tv_tut_headline"
        android:layout_alignStart="@id/tv_tut_headline"
        android:text="@string/tutorial_detail_3"
        android:textSize="30sp"
        android:gravity="end"
        app:layout_widthPercent="80%"/>


    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_tut_clock"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_tut_details"
        android:background="@drawable/tutorial_background_ring"
        app:layout_marginTopPercent="5%">

        <View
            android:id="@+id/v_tut_minute_hand"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tutorial_minute_hand"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/v_dead_view"
            android:layout_marginBottom="-15dp"
            app:layout_heightPercent="45%"/>

        <View
            android:id="@+id/v_tut_hour_hand"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tutorial_hour_hand"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/v_dead_view"
            android:layout_marginBottom="-15dp"
            app:layout_heightPercent="35%"/>

        <View
            android:id="@+id/v_dead_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>

    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>